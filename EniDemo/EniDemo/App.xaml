<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EniDemo.App">
    <Application.Resources>

        <Color x:Key="PrimaryColor">#58B0F0</Color>
        <Color x:Key="ErrorColor">#FF1010</Color>
        
        <Style x:Key="FooterButton" TargetType="Button">
            <Setter Property="TextColor" Value="#a9a9a9" />
            <Setter Property="HorizontalOptions" Value="CenterAndExpand" />
        </Style>

        <Style x:Key="FooterButtonExtra" BasedOn="{StaticResource FooterButton}" TargetType="Button">
            <Setter Property="Padding" Value="40" />
        </Style>
    </Application.Resources>
</Application>